<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:PocketFenceApp"
       x:Class="PocketFenceApp.AppShell">

    <ShellContent
        Title="Family Safety"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="{OnPlatform 'icon_about.png', iOS='icon_about.png', MacCatalyst='icon_about.png'}" />

    <MenuItem Text="About PocketFence" 
              IconImageSource="{OnPlatform 'icon_about.png', iOS='icon_about.png', MacCatalyst='icon_about.png'}"
              Command="{Binding ShowAboutCommand}" />

</Shell>